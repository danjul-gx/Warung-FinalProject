<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA"
    tools:context=".HomeFragment">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="?attr/colorPrimary"
        android:visibility="visible"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp"> <View
            android:id="@+id/viewHomeHeader"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/bg_profile_header" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingTop="48dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selamat Pagi,"
                    android:textColor="#DDDDDD"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mau makan enak\napa hari ini?"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewHomeHeader"
                android:layout_marginTop="-25dp"
                android:layout_marginHorizontal="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/white">

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:drawablePadding="12dp"
                    android:drawableTint="@color/grey_text"
                    android:hint="Cari soto, ayam, dll..."
                    android:textColorHint="@color/grey_text"
                    android:textColor="@color/black"
                    android:paddingHorizontal="16dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="14sp"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cvSearch"
                android:orientation="vertical"
                android:paddingTop="24dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vpBanner"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginBottom="24dp"
                    android:paddingHorizontal="24dp"
                    android:clipToPadding="false"
                    android:clipChildren="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAKANAN BERAT"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/brand_brown"
                    android:letterSpacing="0.05"
                    android:paddingHorizontal="24dp"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMakanan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:nestedScrollingEnabled="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MINUMAN SEGAR"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/brand_brown"
                    android:letterSpacing="0.05"
                    android:paddingHorizontal="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMinuman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:nestedScrollingEnabled="false"/>

            </LinearLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>