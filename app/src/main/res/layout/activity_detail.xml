<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivDetailImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_food_placeholder"/>

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_circle_button"
        android:src="@drawable/icon_kebawah"
        android:rotation="90"
        android:padding="8dp"
        android:elevation="6dp"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="260dp"
        android:background="@drawable/bg_bottom_sheet"
        android:elevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:background="#E0E0E0"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"/>

            <TextView
                android:id="@+id/tvDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Menu Spesial"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/brand_coffee"/>

            <TextView
                android:id="@+id/tvDetailPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 25.000"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/brand_dark_rust"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/tvDetailDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi lengkap menu akan tampil di sini. Rasanya enak sekali loh, dijamin nagih!"
                android:textSize="14sp"
                android:textColor="@color/grey_text"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="8dp"/>

            <View android:layout_width="match_parent" android:layout_height="100dp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDetailAddToCart"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="TAMBAH KE KERANJANG"
            android:textStyle="bold"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/brand_brown"/>
    </LinearLayout>

</RelativeLayout>